<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="launch-menu" label="Launch">
	<item label="Firefox">
		<action name="Execute"><command>firefox</command></action>
	</item>
	<separator />
	<item label="Eclipse">
		<action name="Execute"><command>eclipse</command></action>
	</item>
</menu>

<menu id="system-menu" label="System">
	<item label="Logout">
		<action name="openbox --exit" />
	</item>
	<separator />
	<item label="Reboot">
		<action name="gnome-session-quit --reboot" />
	</item>
	<separator />
	<item label="Shutdown">
		<action name="gnome-session-quit --power-off" />
	</item>
	<separator />
	<item label="Reconfigure Openbox">
    <action name="Reconfigure"><command>openbox --reconfigre</command></action>
	</item>
</menu>

<menu id="root-menu" label="Openbox 3">
	<item label="Terminal">
		<action name="Execute"><command>gnome-terminal</command></action>
	</item>
	<separator />
	<menu id="launch-menu"/>
	<separator />
	<menu id="system-menu"/>
</menu>

</openbox_menu>
