#!/bin/sh

# Configuration variables for dzen2 taskbar

# Fonts
FONT="Fantasque Sans Mono:size=14"
ICON_FONT="FontAwesome:size=12"

## COLORS
FG="#D4F7FC"
BG="#2d2d2d"
RED="#E6B8C7"
BLUE="#9CC0F0"
YELLOW="#E8E0AC"
GREEN="#A1D490"
BROWN="#D1C19D"
PURPLE="#EFCEF2"

## GEOMETRY
PW=$(xrandr --current | grep '*' | uniq | awk '{print $1}' | cut -d 'x' -f1)
PH=100
PX=0
PY=0

## ICONS

BEGIN_ICON_FONT="^fn($ICON_FONT)"
END_FONT="^fn()"
GREEN_FONT="^fg($GREEN)"
YELLOW_FONT="^fg($YELLOW)"
RED_FONT="^fg($RED)"
PURPLE_FONT="^fg($PURPLE)"
END_FG="^fg()"

# DESKTOP
DESKTOP_ICON="${GREEN_FONT}${BEGIN_ICON_FONT}${END_FONT}${END_FG}"

# MUSIC
MUSIC_ICON="${PURPLE_FONT}${BEGIN_ICON_FONT}${END_FONT}${END_FG}"

# BATTERY
 BOLT_ICON="${GREEN_FONT}${BEGIN_ICON_FONT} $END_FONT$END_FG"
BAT_4_ICON="${GREEN_FONT}${BEGIN_ICON_FONT} $END_FONT$END_FG"
BAT_3_ICON="${GREEN_FONT}${BEGIN_ICON_FONT} $END_FONT$END_FG"
BAT_2_ICON="${YELLOW_FONT}${BEGIN_ICON_FONT}  $END_FONT$END_FG"
BAT_1_ICON="${RED_FONT}${BEGIN_ICON_FONT} $END_FONT$END_FG"
BAT_0_ICON="${GREEN_FONT}${BEGIN_ICON_FONT} $END_FONT$END_FG"

# SCREEN BRIGHTNESS
LIGHT_ICON="${BEGIN_ICON_FONT} $END_FONT "

# VOLUME
  VOL_ICON="${BEGIN_ICON_FONT} $END_FONT "
VOL_OFF_ICON="${BEGIN_ICON_FONT} $END_FONT "
